<h1>My References</h1>

<table class="table table-striped">
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Completed</th>
    <th></th>
    <th></th>
  </tr>

<h2>Completed References: <%= @references.select{|s| s.completed.present? }.count %></h2>

<% @references.each do |reference| %>
  <tr>
    <td><%= reference.email %></td>
    <td><%= reference.name %></td>
    <td><% if reference.completed %>
            <%=glyph("ok") %>
          <% else %>
            <%=glyph("exclamation-sign") %>
          <% end %>
    </td>
    <td><%= link_to glyph("send"), reference, action: :resend, method: :resend %></td>
    <td><%= link_to glyph("trash"), reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<div class="well">
<%= simple_form_for :reference, :url => references_send_email_path, :method => :post do |f| %>
  <%= f.input :email %>
  <%= f.submit "Send Reference Request", :class => "btn btn-primary" %>
<% end %>
</div>
