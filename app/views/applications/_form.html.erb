
<% if !@application.signature_stamp.blank?
signed = true
sign_action = "unsign"
else
signed = false
sign_action = "sign"
end %>


<script type="text/javascript">
var references = <%= @application.references.select{ |r| r.completed.present? }.count %>;
var signed = <%= signed %>;
</script>


<%= simple_form_for(@application, :html => { :class => "form-vertical" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="well">
        <h2>Applicant Information</h2>
        <dl>
            <dt>Application ID</dt>
            <dd><%= @application.id %></dd>
        </dl>
        <%= f.fields_for :user do |u| %>
            <%= u.input :name %>
            <%= u.input :email %>
        <% end %>
        <%= f.input :phone %>
        <%= f.input :date_of_birth %>
        </div>
    <div class="well">
      <h2>Address Information</h2>
        <%= f.input :street_address, :as => :text, :input_html => {rows: "3", cols: "100"} %>
        <%= f.input :city %>
        <%= f.input :state, :collection => us_states_long %>
        <%= f.input :zip %>

        </div>
    <div class="well">

        <%= f.input :identify_lgbt, :as => :radio_buttons %>
        <%= f.input :out_and_open, :as => :radio_buttons %>
        <%= f.input :identify_supporter, :as => :radio_buttons %>
        <%= f.input :supportive_parents, :as => :radio_buttons %>
        <div class="well">
            <%= f.input :how_did_you_learn_about_the_scholarship, :collection => Application::HOW_DID_YOU_LEARN_ABOUT_THE_SCHOLARSHIP %>
            <%= f.input :how_did_you_learn_explanation %>
        </div>
    </div>

    <div class="well">
        <h2>Academic Status And High School Information</h2>
        <%= f.input :name_of_high_school %>
        <%= f.input :date_of_graduation %>
        <%= f.input :are_you_a_graduating_high_school_senior, :as => :radio_buttons %>
        <%= f.input :hs_street_address, :as => :text,  :input_html => {rows: "3", cols: "100"}  %>
        <%= f.input :hs_city, :label => "City" %>
        <%= f.input :hs_state, :collection => us_states_long %>
        <%= f.input :hs_zip, :label => "Zip" %>
        <%= f.input :cumulative_gpa %>

        <%= f.input :honors_or_awards, :as => :tinymce %>

    </div>
    <div class="well">
        <h2>College Information</h2>
        <%= f.input :please_lists_schools_where_you_will_be_applying, :as => :tinymce %>
        <%= f.input :major %>
        <%= f.input :admission_status, :collection => Application::ADMISSION_STATUS %>
        <%= f.input :stem, :as => :radio_buttons %>
        <%= t("application.form.stem_description")%>

        
    </div>

    <div class="well">
        <h2>Community Service Involvement and/or Employment History</h2>
        <%= f.input :describe_community_service_activities, :as => :tinymce %>
        <%= f.input :employment_history, :as => :tinymce %>
        <%= f.input :essay, :as => :tinymce %>
    </div>
    <div class="well">
    <h2>Reference Letter</h2>
    <%if @application.references.select{ |r| r.completed.present? }.count > 0 %>
        Reference Complete
    <% else %>
        Your reference is not yet complete. You must obtain a professional or academic reference letter. To send (or resend) the electronic reference form, <%=link_to "click here", references_path %>.
    <% end %>
    </div>

    <div class="well">
    <h2>Attach Transcript</h2>
    <% if @application.transcript.present? %>
        <%= link_to @application.transcript_file_name, @application.transcript.url %>
    <% end %>
        <%= f.input :transcript, :label => "" %>
    </div>

    <div class="well">
    <h2>Waiver and Personal Information Releases</h2>
        <%= f.input :release_high_school, :as => :radio_buttons %>
        <%= f.input :release_local_media, :as => :radio_buttons %>
        <%= f.input :release_national_media, :as => :radio_buttons %>
        <%= f.input :release_local_chapter, :as => :radio_buttons %>
        <%= f.input :release_photograph, :as => :radio_buttons %>
        <%= f.input :release_essay_collection, :as => :radio_buttons %>
        <%= f.input :release_picture_bio_on_website, :as => :radio_buttons %>
    </div>
    <%= f.input :signature_stamp, :as => :hidden %>
    <%= f.input :signature_ip, :as => :hidden %>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-default" %>
  </div>
<% end %>
<br>
<div class="well">
    <h2>Signature</h2>
    <dl>
        <dt>Signature</dt>
            <dd id="signature_status">
            <% if signed %>
                <%=glyph("ok") %>   
            <% else %>
                You must complete all parts of the application, attach your transcript, obtain your references and sign electronically in order for it to be considered for the scholarship.<br>
            <% end %>
            </dd>
        <dt>Application Status</dt>
        <dd id="application_status">
            <% if signed %>
                <%=glyph("ok") %>   
            <% else %>
                <%=glyph("exclamation-sign")%>
            <% end %>
        </dd>


    </dl>

        <%= link_to "#{sign_action.titleize} Application",  {:id => @application.id, :action => sign_action}, :method => "put", :remote => true, :class => "btn btn-default", :id=>"sign_action_button" %>
</div>